# =====================================
# BACKEND Environment Variables
# =====================================

# OpenAI API (REQUIRED für LLM-Funktionen)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development
CORS_ALLOW_ORIGINS=http://localhost:8005,http://localhost:5173,https://www.mimicheck.ai,https://mimicheck.ai

# Security (2025 Best Practices)
ALLOWED_HOSTS=localhost,127.0.0.1,www.mimicheck.ai,mimicheck.ai
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Database (Optional - Sprint 1 nutzt In-Memory)
DATABASE_URL=postgresql://user:password@localhost:5432/nebenkosten

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Storage (S3 - Optional)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=mimicheck-uploads
S3_REGION=eu-central-1

# Email (Optional - für Benachrichtigungen)
EMAIL_FROM=noreply@mimicheck.ai
SENDGRID_API_KEY=SG....

# Security
JWT_SECRET=your-jwt-secret-min-32-chars
SESSION_SECRET=your-session-secret-min-32-chars

# Logging
LOG_LEVEL=INFO
DEBUG=true
