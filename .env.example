# =====================================
# FRONTEND (Vite) - Environment Variables
# =====================================

# Server Configuration
VITE_HOST=127.0.0.1
VITE_PORT=8005
VITE_HMR_HOST=127.0.0.1
VITE_HMR_PORT=8005

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_TELEMETRY=false

# =====================================
# BACKEND (FastAPI/Python) - Optional
# =====================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development
API_SECRET_KEY=your-secret-key-here-min-32-chars

# Database (Neon/Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Upstash)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Storage (S3/Compatible)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=nebenkosten-uploads
S3_REGION=eu-central-1

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_BASIC=price_...
STRIPE_PRICE_ID_PRO=price_...

# LLM/AI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# PDF Processing
PDF_MAX_SIZE_MB=10
PDF_ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png
VIRUS_SCAN_ENABLED=true

# Email (SendGrid/SMTP)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@staatshilfen.ai
SENDGRID_API_KEY=SG....
# Alternative SMTP:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# Security
CORS_ORIGINS=http://localhost:8005,http://localhost:5173
SESSION_SECRET=your-session-secret-min-32-chars
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=

# DSGVO/Compliance
DATA_RETENTION_DAYS=90
AUTO_DELETE_ENABLED=true
CONSENT_TRACKING=false

# =====================================
# DEVELOPMENT ONLY
# =====================================
DEBUG=true
MOCK_SERVICES=false
